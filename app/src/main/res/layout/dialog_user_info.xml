<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_userinfo"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:text="Select Your Friend"/>


    <RadioGroup
        android:id="@+id/rg_friend_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checkedButton="@+id/rb_brian"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_brian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_radio_btn"
            android:paddingLeft="10dp"
            android:text="Brian"
            android:textColor="#000000"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_luke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_radio_btn"
            android:text="Luke"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_letty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_radio_btn"
            android:text="Letty"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_shaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_radio_btn"
            android:text="Shaw"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_parker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_radio_btn"
            android:text="Parker"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#FE1743"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/colorGrey"
            android:text="CANCEL"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>